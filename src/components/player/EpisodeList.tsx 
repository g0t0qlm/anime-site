// src/components/player/EpisodeList.tsx
'use client';

import { useState, useRef, useEffect } from 'react';
import Link from 'next/link';
import { Check, Clock } from 'lucide-react';
import { usePlayerStore } from '@/lib/store/playerStore';

interface EpisodeListProps {
  episodes: any[];
  currentEpisode: number;
  animeId: string;
  onEpisodeSelect?: (ep: number) => void;
}

export default function EpisodeList({
  episodes, currentEpisode, animeId, onEpisodeSelect,
}: EpisodeListProps) {
  const [filter, setFilter] = useState('');
  const { watchHistory } = usePlayerStore();
  const currentRef = useRef<HTMLButtonElement>(null);

  useEffect(() => {
    // Скроллим к текущему эпизоду
    currentRef.current?.scrollIntoView({ behavior: 'smooth', block: 'center' });
  }, [currentEpisode]);

  const filtered = episodes.filter(ep =>
    !filter ||
    String(ep.number).includes(filter) ||
    ep.title?.toLowerCase().includes(filter.toLowerCase())
  );

  const getProgress = (epNumber: number) => {
    const history = watchHistory[animeId];
    if (!history) return null;
    if (history.episode > epNumber) return 100;
    if (history.episode === epNumber) return null; // Есть прогресс
    return null;
  };

  const isWatched = (epNumber: number) => {
    const history = watchHistory[animeId];
    return history && history.episode > epNumber;
  };

  return (
    <div className="bg-[var(--bg-card)] border border-white/5 rounded-2xl
                    flex flex-col h-[calc(100vh-200px)] sticky top-24">
      {/* Хедер */}
      <div className="p-4 border-b border-white/5">
        <div className="flex items-center justify-between mb-3">
          <h3 className="font-semibold text-white">
            Эпизоды
          </h3>
          <span className="text-xs text-slate-500">
            {episodes.length} серий
          </span>
        </div>

        {/* Фильтр */}
        <input
          type="text"
          placeholder="Поиск серии..."
          value={filter}
          onChange={e => setFilter(e.target.value)}
          className="w-full bg-white/5 border border-white/5 rounded-lg
                     px-3 py-2 text-sm text-white placeholder-slate-500
                     focus:outline-none focus:border-violet-500/50 transition-colors"
        />
      </div>

      {/* Список */}
      <div className="flex-1 overflow-y-auto p-2">
        {filtered.map((ep) => {
          const isCurrent = ep.number === currentEpisode;
          const watched = isWatched(ep.number);

          return (
            <button
              key={ep.id || ep.number}
              ref={isCurrent ? currentRef : undefined}
              onClick={() => onEpisodeSelect?.(ep.number)}
              className={`
                w-full flex items-center gap-3 p-3 rounded-xl text-left
                transition-all mb-1 group
                ${isCurrent
                  ? 'bg-violet-600/20 border border-violet-500/30'
                  : 'hover:bg-white/5 border border-transparent'
                }
              `}
            >
              {/* Номер/иконка */}
              <div className={`
                w-8 h-8 rounded-lg flex items-center justify-center text-xs font-bold
                shrink-0 transition-all
                ${isCurrent
                  ? 'bg-violet-600 text-white'
                  : watched
                    ? 'bg-green-900/30 text-green-400'
                    : 'bg-white/5 text-slate-400 group-hover:bg-white/10'
                }
              `}>
                {watched ? <Check size={14} /> : ep.number}
              </div>

              {/* Текст */}
              <div className="flex-1 min-w-0">
                <p className={`
                  text-sm font-medium truncate
                  ${isCurrent ? 'text-violet-300' : watched ? 'text-slate-400' : 'text-slate-200'}
                `}>
                  {ep.title || `Серия ${ep.number}`}
                </p>
                {ep.airDate && (
                  <p className="text-xs text-slate-600 mt-0.5">{ep.airDate}</p>
                )}
              </div>

              {/* Воспроизводится */}
              {isCurrent && (
                <div className="flex gap-0.5 shrink-0">
                  {[0, 1, 2].map(i => (
                    <div
                      key={i}
                      className="w-0.5 bg-violet-400 rounded-full animate-bounce"
                      style={{
                        height: `${12 + i * 4}px`,
                        animationDelay: `${i * 0.15}s`
                      }}
                    />
                  ))}
                </div>
              )}
            </button>
          );
        })}
      </div>
    </div>
  );
}